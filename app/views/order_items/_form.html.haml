= form_for @order_item do |f|
  - if @order_item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@order_item.errors.count, "error")} prohibited this order_item from being saved:"
      %ul
        - @order_item.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :order
    = f.text_field :order
  .field
    = f.label :product
    = f.text_field :product
  .field
    = f.label :quantity
    = f.number_field :quantity
  .field
    = f.label :price
    = f.text_field :price
  .actions
    = f.submit 'Save'
